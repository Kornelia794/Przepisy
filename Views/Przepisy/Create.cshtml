@model zpnet.Models.przepis

@{
    ViewData["Title"] = "Tworzenie";
}

<div class = "main">
    <div class = "title">
        <h1>Stwórz swój własny przepis:</h1>
    </div>
<div class = "bottom"> 
    <div class="row"> 
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nazwa" class="control-label"></label>
                <input asp-for="nazwa" class="form-control" />
                <span asp-validation-for="nazwa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="typ" class="control-label"></label>
                <input asp-for="typ" class="form-control" />
                <span asp-validation-for="typ" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="przepisText" class="control-label"></label>
                <textarea asp-for="przepisText" class="form-control" /></textarea>
            </div>
                          <div class="form-group">
                <label asp-for="autorid" class="control-label"></label>
                <select asp-for="autorid" class ="form-control" asp-items="ViewBag.autorzy"></select>
            </div>
                   @foreach(var k in ViewBag.ksiazkiLista)
                    {                    
                        <input type="checkbox" name="selectedCourses" value="@k.id" @k.zaznaczone />@k.nazwa
                    }

                    <br />
            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-primary" />
            </div>
            <br />

        </form>
    </div>
</div>
</div>
</div>





<div>
    <a asp-action="Index"><button type="button" class="btn btn-secondary">Powrót do listy</button></a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
